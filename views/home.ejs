<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home | Foundations of Algebra</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <% include partials/nav.ejs %>
    <div class="container">
      <h1>Welcome to Foundations of Algebra</h1>
      <% if (!user) { %>
      <p>
        You are currently browsing as a guest. Please <a href="/login" class="link-button">log
        in</a> to access personalized features.
      </p>
      <% } %>
      <section class="card">
        <h2>Announcements</h2>
        <ul>
          <% announcements.forEach(function(a){ %>
          <li><strong><%= a.title %>:</strong> <%= a.content %></li>
          <% }) %>
        </ul>
      </section>
      <section class="card">
        <h2>Latest Discussions</h2>
        <% posts.length === 0 ? ( %>
        <p>No discussions yet. <a href="/forum" class="link-button">Visit the forum</a></p>
        <% ) : ( posts.forEach(function(post){ %>
        <div class="post">
          <h3><%= post.title %></h3>
          <div class="post-meta">By <%= post.author %> on <%= post.createdAt.toDateString() %></div>
          <p><%= post.body.substring(0,100) %>...</p>
        </div>
        <% }) ) %>
        <a href="/forum" class="link-button">See all discussions</a>
      </section>
    </div>
  </body>
</html>